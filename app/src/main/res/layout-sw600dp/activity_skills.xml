<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tmorgan2.csc415project.SkillsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:title="Testing"/>
    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:layout_width="584dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/skillFrame"
        android:orientation="horizontal"
        >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_skills"
            />
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_skills_detail"
            />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
